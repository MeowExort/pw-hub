<Window x:Class="Pw.Hub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Pw.Hub.Models"
        xmlns:pages="clr-namespace:Pw.Hub.Pages"
        xmlns:conv="clr-namespace:Pw.Hub.Infrastructure.Converters"
        Closing="MainWindow_OnClosing"
        Icon="/Assets/icon.png"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="PW Hub" Height="900" Width="1900" WindowStartupLocation="CenterScreen"
        Activated="MainWindow_OnActivated"
        Deactivated="MainWindow_OnDeactivated"
        StateChanged="MainWindow_OnStateChanged">
            <Window.Resources>
                <conv:SelectedSquadEmptyConverter x:Key="SelectedSquadEmptyConverter" />
                
                <!-- Close button style matching the window titlebar close button -->
                <Style x:Key="PopupCloseButtonStyle" TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}">
                                    <Path Width="10" Height="10"
                                         Data="M 0,0 L 10,10 M 0,10 L 10,0"
                                         Stroke="{TemplateBinding Foreground}"
                                         StrokeThickness="1"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#C42B1C"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Window.Resources>
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                Background="{StaticResource AccentSteamBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- Top Navigation Menu -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                    <!-- Modules Library Button -->
                    <Button Style="{StaticResource ModernButton}"
                            Background="{StaticResource AccentBlueBrush}"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="16,14"
                            Margin="8,8,8,4"
                            Command="{Binding OpenModulesLibraryCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📚"
                                       FontSize="16"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Библиотека модулей"
                                       Style="{StaticResource ModernTextBlock}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Profile Button -->
                    <Button Style="{StaticResource ModernButton}"
                            Background="{StaticResource AccentBlueBrush}"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="16,14"
                            Margin="8,4,8,4"
                            Command="{Binding OpenProfileCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤"
                                       FontSize="16"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Профиль"
                                       Style="{StaticResource ModernTextBlock}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Quick Run Module Section -->
                    <Border Background="{StaticResource AccentBlueBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,1,0,1"
                            Margin="0,8,0,0"
                            Padding="12">
                        <StackPanel>
                            <TextBlock Text="БЫСТРЫЙ ЗАПУСК"
                                      Style="{StaticResource ModernTextBlock}"
                                      FontWeight="SemiBold"
                                      FontSize="11"
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      Margin="0,0,0,8"/>
                            <ComboBox x:Name="ModulesList"
                                     Style="{StaticResource ModernComboBox}"
                                     DisplayMemberPath="Name"
                                     ItemsSource="{Binding QuickModules}"
                                     SelectedItem="{Binding SelectedQuickModule, Mode=TwoWay}"
                                     Margin="0,0,0,8"/>
                            <Button x:Name="RunModuleButton"
                                   Style="{StaticResource PrimaryButton}"
                                   Content="▶ Запустить"
                                   HorizontalAlignment="Stretch"
                                   Padding="12,8"
                                   Command="{Binding RunSelectedModuleCommand}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Squad/Account Tree -->
                <DockPanel Margin="0">
                    <Border DockPanel.Dock="Top"
                            Background="{StaticResource AccentBlueBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12,16">
                        <TextBlock Text="ОТРЯДЫ И АККАУНТЫ"
                                   Style="{StaticResource ModernTextBlock}"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Foreground="{StaticResource AccentHighlightBrush}"/>
                    </Border>
                    <Grid>
                        <!-- Tree content -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8" Background="Transparent">
                            <TreeView x:Name="NavigationTree"
                                      Style="{StaticResource ModernTreeView}"
                                      ItemsSource="{Binding Squads}"
                                      Background="Transparent"
                                      AllowDrop="True"
                                      PreviewMouseLeftButtonDown="NavigationTree_OnPreviewMouseLeftButtonDown"
                                      PreviewMouseMove="NavigationTree_OnPreviewMouseMove"
                                      DragOver="NavigationTree_OnDragOver"
                                      Drop="NavigationTree_OnDrop"
                                      DragLeave="NavigationTree_OnDragLeave"
                                      PreviewMouseLeftButtonUp="NavigationTree_OnPreviewMouseLeftButtonUp">
                                <TreeView.ContextMenu>
                                    <ContextMenu x:Name="NavigationContextMenu"
                                               Background="{StaticResource BackgroundSecondaryBrush}"
                                               BorderBrush="{StaticResource BorderBrush}"
                                               Foreground="{StaticResource TextPrimaryBrush}">
                                        <MenuItem Header="➕ Добавить отряд" Command="{Binding AddSquadCommand}" />
                                        <MenuItem x:Name="AddAccountMenuItem" Header="👤 Добавить аккаунт"
                                                  Command="{Binding AddAccountCommand}"
                                                  CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                        <Separator Style="{StaticResource ModernSeparator}"/>
                                        <MenuItem x:Name="EditSquadMenuItem" Header="✏ Редактировать отряд"
                                                  Command="{Binding EditSquadCommand}"
                                                  CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                        <MenuItem x:Name="EditAccountMenuItem" Header="✏ Редактировать аккаунт"
                                                  Command="{Binding EditAccountCommand}"
                                                  CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                        <MenuItem x:Name="LoadCharactersMenuItem" Header="⬇ Загрузить персонажей"
                                                  Command="{Binding LoadCharactersCommand}"
                                                  CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                        <Separator Style="{StaticResource ModernSeparator}"/>
                                        <MenuItem x:Name="DeleteMenuItem" Header="🗑 Удалить"
                                                  Command="{Binding DeleteNodeCommand}"
                                                  CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                    </ContextMenu>
                                </TreeView.ContextMenu>
                                <TreeView.Resources>
                                    <HierarchicalDataTemplate DataType="{x:Type models:Squad}" ItemsSource="{Binding Accounts}">
                                        <Border Padding="8,6" Margin="0,2" CornerRadius="3"
                                                Background="Transparent">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Header row (icon + name) -->
                                                <StackPanel Orientation="Horizontal" Grid.Row="0">
                                                    <TextBlock Text="📁"
                                                               VerticalAlignment="Center"
                                                               FontSize="14"
                                                               Margin="0,0,8,0"/>
                                                    <TextBlock VerticalAlignment="Center"
                                                               Text="{Binding Name}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                </StackPanel>

                                                <!-- Inline empty-state with Add Account button (visible when there are no accounts and squad is selected) -->
                                                <Border x:Name="EmptyInlinePanel"
                                                        Grid.Row="1"
                                                        Background="{StaticResource AccentBlueBrush}"
                                                        BorderBrush="{StaticResource BorderBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Padding="8"
                                                        Margin="24,6,0,0">
                                                    <Border.Visibility>
                                                        <MultiBinding Converter="{StaticResource SelectedSquadEmptyConverter}" Mode="OneWay">
                                                            <!-- 0: current squad (DataContext of template) -->
                                                            <Binding />
                                                            <!-- 1: selected item in the TreeView -->
                                                            <Binding ElementName="NavigationTree" Path="SelectedItem" />
                                                            <!-- 2: number of accounts in squad -->
                                                            <Binding Path="Accounts.Count" />
                                                        </MultiBinding>
                                                    </Border.Visibility>
                                                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                                        <TextBlock Text="Нет аккаунтов в этом отряде"
                                                                   Style="{StaticResource ModernTextBlock}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   Margin="0,0,8,8"/>
                                                        <Button Content="👤 Добавить аккаунт"
                                                                Style="{StaticResource ModernButton}"
                                                                Padding="12,6"
                                                                Command="{Binding DataContext.AddAccountCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </HierarchicalDataTemplate>
                                    <DataTemplate DataType="{x:Type models:Account}">
                                        <Border Padding="8,6" Margin="0,1" CornerRadius="3"
                                                Background="Transparent">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border Width="32" Height="32"
                                                       CornerRadius="16"
                                                       Margin="0,0,10,0"
                                                       BorderBrush="{StaticResource BorderBrush}"
                                                       BorderThickness="1">
                                                    <Ellipse Width="30" Height="30">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding ImageUri}" />
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                </Border>
                                                <TextBlock Grid.Column="1"
                                                          VerticalAlignment="Center"
                                                          Text="{Binding Name}"
                                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </TreeView.Resources>
                            </TreeView>
                        </ScrollViewer>

                        <!-- Empty state overlay when tree has no items -->
                        <Border x:Name="EmptyState"
                                Margin="8"
                                Background="{StaticResource BackgroundSecondaryBrush}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="16">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasItems, ElementName=NavigationTree}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Нет отрядов"
                                           Style="{StaticResource ModernTextBlock}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,6"/>
                                <TextBlock Text="Создайте отряд, затем добавьте аккаунты"
                                           TextWrapping="WrapWithOverflow"
                                           TextAlignment="Center"
                                           Style="{StaticResource ModernTextBlock}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,12"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="➕ Добавить отряд"
                                            Style="{StaticResource PrimaryButton}"
                                            Padding="16,8"
                                            Margin="0,0,8,0"
                                            Command="{Binding AddSquadCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DockPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="0" Grid.Column="1"
                Background="{StaticResource BackgroundPrimaryBrush}"
                Padding="0">
            <pages:AccountPage x:Name="AccountPage" />
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Column="1" Grid.Row="1"
                   Style="{StaticResource ModernStatusBar}"
                   Height="28">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="●"
                              Foreground="{StaticResource SuccessBrush}"
                              FontSize="12"
                              Margin="0,0,6,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="Готово"
                              Style="{StaticResource ModernTextBlock}"
                              FontSize="12"
                              Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </StatusBarItem>
            <Separator Style="{StaticResource ModernSeparator}"/>
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText"
                          Text=""
                          Style="{StaticResource ModernTextBlock}"
                          FontSize="12"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
            </StatusBarItem>
        </StatusBar>
        

        <!-- Updates popup overlay (Popup to appear above WebView2) -->
        <Popup x:Name="UpdatesPopup"
               PlacementTarget="{Binding ElementName=RootGrid}"
               Placement="Relative"
               StaysOpen="True"
               AllowsTransparency="True"
               IsOpen="{Binding IsUpdatesPopupOpen}">
            <Border
                Background="#DD1B2838"
                BorderBrush="#2A475E" BorderThickness="1"
                CornerRadius="8"
                MinWidth="400"
                SnapsToDevicePixels="True">
                <StackPanel Orientation="Vertical" Margin="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Text="Доступны обновления модулей"
                                   FontWeight="SemiBold"
                                   Style="{StaticResource ModernTextBlock}" />
                        <Button Grid.Column="1"
                                Width="46" Height="32"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Style="{StaticResource PopupCloseButtonStyle}"
                                Command="{Binding CloseUpdatesPopupCommand}"/>
                    </Grid>
                    <TextBlock x:Name="UpdatesPopupText"
                               Margin="0,16,0,10"
                               TextWrapping="Wrap"
                               Text="{Binding UpdatesText}"
                               Style="{StaticResource ModernTextBlock}"/>
                    <Button Content="Обновить"
                            Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Right"
                            Command="{Binding OpenModulesLibraryCommand}"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>