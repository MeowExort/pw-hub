<Window x:Class="Pw.Hub.Windows.ApiKeySettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки AI API" Height="200" Width="400"
        Style="{StaticResource ModernWindowChrome}"
        Icon="/Assets/icon.png"
        MaxHeight="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
        MaxWidth="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="API ключ Ollama Cloud:" Margin="0,0,0,8"/>
        <PasswordBox x:Name="ApiKeyBox" Grid.Row="1" Height="25"/>
        
        <TextBlock Grid.Row="2" TextWrapping="Wrap" Margin="0,12,0,0" FontSize="11" Foreground="Gray">
            Для получения API ключа посетите: https://ollama.ai/cloud\r\n
            Ключ будет сохранен локально в настройках приложения.
        </TextBlock>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Отмена" Width="80" Click="Cancel_Click" Margin="0,0,8,0"/>
            <Button Content="Сохранить" Width="80" Click="Save_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>