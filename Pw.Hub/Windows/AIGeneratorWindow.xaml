<Window x:Class="Pw.Hub.Windows.AIGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Генератор" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/icon.png"
        Style="{StaticResource ModernWindowChrome}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock Text="Опишите, что нужно сделать (генерация скрипта Lua)" Margin="0,0,0,4"
                       Style="{StaticResource ModernTextBlock}"/>
            <TextBox x:Name="PromptText" AcceptsReturn="True" Height="120" TextWrapping="Wrap"
                     Style="{StaticResource ModernTextBox}"/>
        </StackPanel>

        <Border Grid.Row="1" Padding="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Lua скрипт" FontWeight="SemiBold" VerticalAlignment="Center"
                               Style="{StaticResource ModernTextBlock}"/>
                    <Button x:Name="GenerateLuaBtn" Content="Сгенерировать" Margin="12,0,0,0" Click="GenerateLua_Click"
                            Style="{StaticResource PrimaryButton}"/>
                    <Button Content="Настройки API" Margin="8,0,0,0" Click="Settings_Click"
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="Сохранить в Scripts" Margin="8,0,0,0" Click="SaveLua_Click"
                            Style="{StaticResource ModernButton}"/>
                </StackPanel>
                <TextBox x:Name="LuaPreview" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                         Style="{StaticResource ModernTextBox}"/>
            </DockPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Закрыть" Width="120" Click="Close_Click" Style="{StaticResource ModernButton}"/>
        </StackPanel>
    </Grid>
</Window>