<Window x:Class="Pw.Hub.Windows.DiffPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:beh="clr-namespace:Pw.Hub.Behaviors"
        Title="Полные изменения" Height="700" Width="900" WindowStartupLocation="CenterOwner"
        Icon="/Assets/icon.png"
        Style="{StaticResource ModernWindowChrome}">
    <Grid Margin="12">
        <Border Style="{StaticResource Card}" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Полный diff изменений" Style="{StaticResource ModernTextBlock}" FontWeight="SemiBold"/>
                <RichTextBox x:Name="DiffBox" Grid.Row="1" IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                             Background="{StaticResource BackgroundSecondaryBrush}"
                             BorderThickness="0"
                             FontFamily="{StaticResource MonospaceFont}"
                             beh:RichTextBoxDiffBehavior.Lines="{Binding DiffLines}"/>
            </Grid>
        </Border>
    </Grid>
</Window>