<Window x:Class="Pw.Hub.Windows.LuaEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"

        mc:Ignorable="d"
        Icon="/Assets/icon.png"
        Title="Lua Editor" Height="850" Width="1500" WindowStartupLocation="CenterOwner"
        Style="{StaticResource ModernWindowChrome}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource BackgroundSecondaryBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button x:Name="RunBtn"
                            Style="{StaticResource PrimaryButton}"
                            Content="▶ Запустить"
                            MinWidth="120"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Click="OnRunClick" />
                    <Button x:Name="DebugBtn"
                            Style="{StaticResource PrimaryButton}"
                            Content="▶ Отладка"
                            MinWidth="120"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Click="OnDebugClick" />
                    <Button x:Name="StopBtn"
                            Style="{StaticResource ModernButton}"
                            Content="⏹ Остановить"
                            MinWidth="120"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Click="OnStopClick"
                            IsEnabled="False" />
                    <Button Style="{StaticResource ModernButton}"
                            Content="🗑 Очистить вывод"
                            MinWidth="140"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Click="OnClearOutputClick" />
                    <Button Style="{StaticResource ModernButton}"
                            Content="✖ Закрыть"
                            MinWidth="100"
                            Padding="16,8"
                            Click="OnCloseClick" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBlock Text="⚫ F9 — поставить/снять брейкпоинт на текущей строке  "
                               Style="{StaticResource ModernTextBlock}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"/>
                    <TextBlock x:Name="BpCountText"
                               Text="(0 точек)"
                               Style="{StaticResource ModernTextBlock}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Editor and Output -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Code Editor -->
            <Border Grid.Row="0"
                    Style="{StaticResource Card}"
                    Padding="0"
                    Margin="0,0,0,8">
                <DockPanel>
                    <Border DockPanel.Dock="Top"
                            Background="{StaticResource BackgroundTertiaryBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12,8">
                        <TextBlock Text="📝 Редактор кода Lua"
                                   Style="{StaticResource ModernTextBlock}"
                                   FontWeight="SemiBold" />
                    </Border>
                    <avalonedit:TextEditor x:Name="Editor"
                                           ShowLineNumbers="True"
                                           FontFamily="{StaticResource MonospaceFont}"
                                           FontSize="14"
                                           HorizontalScrollBarVisibility="Auto"
                                           VerticalScrollBarVisibility="Auto"
                                           Background="{StaticResource BackgroundSecondaryBrush}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           LineNumbersForeground="{StaticResource TextSecondaryBrush}"
                                           Padding="8"
                                           MinHeight="150" />
                </DockPanel>
            </Border>

            <!-- Output Console -->
            <Border Grid.Row="2"
                    Style="{StaticResource Card}"
                    Padding="0"
                    Margin="0,8,0,0">
                <DockPanel>
                    <Border DockPanel.Dock="Top"
                            Background="{StaticResource AccentBlueBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12,8">
                        <TextBlock Text="📟 Консоль вывода (Print)"
                                   Style="{StaticResource ModernTextBlock}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentHighlightBrush}" />
                    </Border>
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Padding="8">
                        <TextBox x:Name="OutputBox"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 FontFamily="{StaticResource MonospaceFont}"
                                 FontSize="13"
                                 Padding="4"
                                 MinHeight="100" />
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>