<Window x:Class="Pw.Hub.Pages.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Создать аккаунт" Height="600" Width="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource ModernWindowChrome}">
    <Border Style="{StaticResource Card}" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="👤 Создание аккаунта"
                          Style="{StaticResource HeaderMedium}"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Form -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="Название аккаунта"
                          Style="{StaticResource ModernTextBlock}"
                          Margin="0,0,0,6"/>
                <TextBox x:Name="AccountNameTextBox"
                        Style="{StaticResource ModernTextBox}"
                        Padding="12,10"
                        MaxLength="50"
                        Margin="0,0,0,16"/>

                <TextBlock Text="Email (необязательно)"
                          Style="{StaticResource ModernTextBlock}"
                          Margin="0,0,0,6"/>
                <TextBox x:Name="EmailTextBox"
                        Style="{StaticResource ModernTextBox}"
                        Padding="12,10"
                        MaxLength="100"/>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Отмена"
                       Style="{StaticResource ModernButton}"
                       MinWidth="100"
                       Padding="16,10"
                       Margin="0,0,8,0"
                       Click="OnCancelClick"/>
                <Button Content="Создать"
                       Style="{StaticResource PrimaryButton}"
                       MinWidth="100"
                       Padding="16,10"
                       IsDefault="True"
                       Click="OnCreateClick"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
